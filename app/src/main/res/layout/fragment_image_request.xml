<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".imagerequest.ImageRequestFragment">

    <TextView
        android:id="@+id/image_request_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/image_request_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true" />

    <GridView
        android:id="@+id/image_request_gridview"
        android:layout_below="@+id/image_request_textview"
        android:layout_above="@+id/image_request_button_more_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:numColumns="4"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp" />

    <Button
        android:id="@+id/image_request_button_more_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/gray"
        android:layout_alignParentBottom="true"
        android:text="@string/button_more_images"/>
</RelativeLayout>